{
  "manifest_version": 3,
  "name": "Oxyplug - Technical SEO Audit",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "/assets/icons/16.png",
      "32": "/assets/icons/32.png",
      "48": "/assets/icons/48.png",
      "128": "/assets/icons/128.png"
    },
    "default_title": "Show bugs that are on your page",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "description": "Find bugs on your page based on Google Lighthouse",
  "icons": {
    "16": "/assets/icons/16.png",
    "32": "/assets/icons/32.png",
    "48": "/assets/icons/48.png",
    "128": "/assets/icons/128.png"
  },
  "author": "Oxyplug",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "assets/js/common.js",
        "assets/js/content-script.js"
      ],
      "css": [
        "assets/css/common.css",
        "assets/css/content.css"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; img-src data:"
  },
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
      "http://*/*",
      "https://*/*"
    ]
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "storage",
    "webRequest"
  ],
  "short_name": "Technical SEO",
  "update_url": "https://www.oxyplug.com/extensions/Technical-SEO-Audit/update-info.xml",
  "web_accessible_resources": [
    {
      "resources": [
        "/assets/fonts/*.woff2",
        "/assets/fonts/*.woff",
        "/assets/fonts/*.ttf",
        "/assets/fonts/*.eot",
        "/assets/fonts/*.svg",
        "/assets/css/common.css",
        "/assets/css/shadow-content.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}